cc_library_shared {

    name: "liblightsconfig",

    cflags: ["-Werror"],

    include_dirs: ["external/expat/lib"],

    srcs: ["lights_config.c"],
    proprietary: true,

    shared_libs: [
        "libcutils",
        "libutils",
        "libdl",
        "liblog",
        "libexpat",
