    srcs: ["lights.c"],
    relative_install_path: "hw",
    name: "lights.stm",

    include_dirs: ["external/expat/lib"],

    header_libs: [
        "libhardware_headers",
        "libsystem_headers",
        "liblog_headers",
    ],
    proprietary: true,

    shared_libs: [
        "liblog",
        "libexpat",
        "liblightsconfig",
    ],

}
